{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "pnpm -r run test && lerna publish --conventional-commits --no-private --registry=https://registry.npmjs.org/"
  },
  "husky": {
    "hooks": {
      "commit-msg": "cross-env-shell commitlint -e $GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "lerna": "^6.4.1",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "cross-env": "^6.0.3",
    "husky": "^3.0.9"
  }
}
